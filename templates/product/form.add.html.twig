{% extends 'base.html.twig' %}

{% block title %}Create Product{% endblock %}

{% block javascripts %} 
{# <script defer src="js/formValid.js"></script> #}
<script defer type="text/javascript">
    function validate() {
   
        let formfields= document.forms['product'].getElementsByClassName('form-control');

        for(let i=0;i<formfields.length;i++){
            if(formfields[i].value ==''){
                formfields[i].style.background = 'red';
            }
        }
     }
</script>
 {% endblock %}

{% block body %}

<div class="container my-5">
    <div class="row">
        <div class="col">
            <h3 class="text-center">Ajouter un produit</h3>
        </div>
    </div>
    <div class="row">
        <div class="col">
            {{form_start(form)}}

            <a href="{{path('product')}}" class="btn btn-info">Retour</a>
            <button type="submit" onclick="validate()" class="btn btn-success">Cr√©er!</button>
            
            {{form_end(form)}}
        </div>
    </div>
</div>

{% endblock %}